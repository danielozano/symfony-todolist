{% extends 'AcmeTaskBundle::base.html.twig' %}
{% block body %}
	{% if task %}
		<article>
			<header>
				<h3>{{task.title}}</h3>
			</header>
			<main>
				<p>{{task.description}}</p>
			</main>
			<footer>
				Created at: {{ task.createdAt|date('Y-m-d H:i:s') }}
				{% if task.updatedAt > task.createdAt %}
					<br>Updated at: {{ task.updatedAt|date('Y-m-d H:i:s') }}
				{% endif %}
				<a href="{{ path('acme_task_delete', {'id': task.id}) }}">Remove Task</a>
			</footer>
		</article>
	{% else %}
		<h3>Error, empty task.</h3>
	{% endif %}
	<div>
		<a href="{{ path('acme_task_index') }}">Go Back</a>
	</div>
{% endblock %}
